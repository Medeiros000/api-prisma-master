generator client {
  provider = "prisma-client"
  output   = "@/generated/prisma"
  binaryTargets = ["native", "libquery_engine-rhel-openssl-3.0.x.so.node"]
  runtime = "vercel-edge"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}
